<h1>Sign in</h1>
<%= form_for(:session, :url => sessions_path) do |f| %> <!-- we need to indicate both name and URL of the resource 'cos no Session model exists. unlike the form_for(@user) automatically do that -->
	<div class = "field">
		<%= f.label :email %><br/>
		<%= f.text_field :email %>
	</div>
	<div class = "field">
		<%= f.label :password %><br/>
		<%= f.password_field :password %>
	</div>
	<div class = "actions">
		<%= f.submit "Sign in" %>
	</div>
<% end %>

<p> New User? <%= link_to "Sign up now!", signup_path %></p>
