<h1>Edit user</h1>
<%= form_for(@user) do |f| %>
	<%= render 'users/fields', :f => f %>
	<div class = "actions" >
		<%= f.submit "Update" %>
	</div>
<% end %>

<div>
	<%= gravatar_for @user %>
	<%= link_to 'change', 'http://gravatar.com/emails', :target => '_new'%><!-- this url is the location to add or update gravatar -->
</div>
